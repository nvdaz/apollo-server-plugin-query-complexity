{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist/esm"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/__tests__/*.ts"]
}
