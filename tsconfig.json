{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "isolatedModules": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/__tests__/*.ts"]
}
